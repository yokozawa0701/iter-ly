---
interface Props {
  title: string;
  image?: string;
  class?: string;
}

const { title, image, class: className = '' } = Astro.props;
---

<div
  class:list={[
    'overflow-hidden rounded-2xl bg-white shadow-md transition-shadow hover:shadow-lg',
    className,
  ]}
>
  {
    image && (
      <div class="aspect-video w-full overflow-hidden bg-gray-200">
        <img
          src={image}
          alt={title}
          class="h-full w-full object-cover"
          loading="lazy"
        />
      </div>
    )
  }
  <div class="p-6">
    <h3 class="mb-2 text-xl font-bold text-gray-900">{title}</h3>
    <div class="text-gray-600">
      <slot />
    </div>
  </div>
</div>

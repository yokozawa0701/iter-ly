---
interface Props {
  time: string;
  title: string;
  image?: string;
}

const { time, title, image } = Astro.props;
---

<div class="flex gap-4 md:gap-8">
  <div class="flex flex-col items-center">
    <div
      class="flex h-10 w-20 shrink-0 items-center justify-center rounded-full bg-cyan-500 text-sm font-bold text-white"
    >
      {time}
    </div>
    <div class="w-0.5 grow bg-cyan-200"></div>
  </div>
  <div class="pb-8">
    <h3 class="text-lg font-bold text-gray-900">{title}</h3>
    <div class="mt-2 text-gray-600">
      <slot />
    </div>
    {
      image && (
        <div class="mt-3 overflow-hidden rounded-xl">
          <img
            src={image}
            alt={title}
            class="h-auto w-full max-w-md object-cover"
            loading="lazy"
          />
        </div>
      )
    }
  </div>
</div>

---
interface Props {
  icon?: string;
  class?: string;
}

const { icon, class: className = '' } = Astro.props;
---

<div class:list={['flex flex-col items-center gap-2 text-center', className]}>
  {icon && <span class="text-3xl">{icon}</span>}
  <span class="text-sm font-semibold text-gray-700">
    <slot />
  </span>
</div>

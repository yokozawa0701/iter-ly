---
interface PriceRow {
  label: string;
  price: string;
}

interface Props {
  title: string;
  rows: PriceRow[];
  note?: string;
  notes?: string[];
  class?: string;
}

const { title, rows, note, notes, class: className = '' } = Astro.props;
---

<div
  class:list={[
    'overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-md',
    className,
  ]}
>
  <div class="bg-cyan-600 px-6 py-4 text-center">
    <h3 class="text-xl font-bold text-white">{title}</h3>
  </div>
  <div class="p-6">
    <table class="w-full">
      <tbody>
        {
          rows.map((row) => (
            <tr class="border-b border-gray-100 last:border-0">
              <td class="py-3 text-gray-700">{row.label}</td>
              <td class="py-3 text-right font-bold text-gray-900">
                {row.price}
              </td>
            </tr>
          ))
        }
      </tbody>
    </table>
    {note && <p class="mt-4 text-sm text-gray-500">{note}</p>}
    {
      notes && (
        <div class="mt-4 space-y-1 text-sm text-gray-500">
          {notes.map((n) => (
            <p style="padding-left: 1em; text-indent: -1em;">{n}</p>
          ))}
        </div>
      )
    }
  </div>
</div>

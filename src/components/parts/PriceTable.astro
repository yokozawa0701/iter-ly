---
interface PriceRow {
  label: string;
  price: string;
  subPrice?: string;
}

interface Props {
  title: string;
  headers?: string[];
  rows: PriceRow[];
  note?: string;
  notes?: string[];
  class?: string;
}

const {
  title,
  headers,
  rows,
  note,
  notes,
  class: className = '',
} = Astro.props;
const hasSubPrice = rows.some((row) => row.subPrice);
---

<div
  class:list={[
    'overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-md',
    className,
  ]}
>
  <div class="bg-cyan-600 px-6 py-4 text-center">
    <h3 class="text-xl font-bold text-white">{title}</h3>
  </div>
  <div class="p-6">
    <table class="w-full">
      {
        headers && (
          <thead>
            <tr class="border-b border-gray-200">
              {headers.map((header, i) => (
                <th
                  class:list={[
                    'pb-2 text-sm font-medium text-gray-500',
                    i === 0 ? 'text-left' : 'text-right',
                  ]}
                >
                  {header}
                </th>
              ))}
            </tr>
          </thead>
        )
      }
      <tbody>
        {
          rows.map((row) => (
            <tr class="border-b border-gray-100 last:border-0">
              <td class="py-3 text-gray-700">{row.label}</td>
              <td class="py-3 text-right font-bold text-gray-900">
                {row.price}
              </td>
              {hasSubPrice && (
                <td class="py-3 text-right text-sm text-gray-500">
                  {row.subPrice}
                </td>
              )}
            </tr>
          ))
        }
      </tbody>
    </table>
    {note && <p class="mt-4 text-sm text-gray-500">{note}</p>}
    {
      notes && (
        <div class="mt-4 space-y-1 text-sm text-gray-500">
          {notes.map((n) => (
            <p style="padding-left: 1em; text-indent: -1em;">{n}</p>
          ))}
        </div>
      )
    }
  </div>
</div>

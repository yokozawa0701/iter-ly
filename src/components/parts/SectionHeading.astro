---
interface Props {
  subtitle?: string;
  class?: string;
}

const { subtitle, class: className = '' } = Astro.props;
---

<div class:list={['mb-12 text-center', className]}>
  <h2 class="text-3xl font-bold text-sky-600 md:text-4xl">
    <slot />
  </h2>
  {subtitle && <p class="mt-4 text-lg text-gray-600">{subtitle}</p>}
</div>

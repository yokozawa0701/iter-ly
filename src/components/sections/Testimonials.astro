---
import SectionHeading from '../parts/SectionHeading.astro';
import StarRating from '../parts/StarRating.astro';

const testimonials = [
  {
    name: 'S.M. さん',
    date: '',
    rating: 5,
    tag: 'ガイド',
    text: '日本での生活経験を活かし、日本と比較しながらセブ島のことを丁寧に教えてくれました。ドローンで動画も撮影してくれ、想像以上に満足できました！',
  },
  {
    name: 'M.S. さん',
    date: '',
    rating: 5,
    tag: '料金',
    text: 'セブ留学中にクラスメイト6名で利用しました。1人あたり10,980円で送迎もエントランスも全部込み。学生にはありがたい価格でした。',
  },
  {
    name: 'M.F. さん',
    date: '',
    rating: 5,
    tag: '現地体験',
    text: '個別対応で私たちの都合に寄り添ってくださり、友達感覚で現地民と交流できる特別な体験が出来ました。SNSでは出てこない現地民おすすめ店を知れ、セブ島の生活も垣間見ることができた旅でした！',
  },
];
---

<section class="bg-white py-20">
  <div class="mx-auto max-w-6xl px-4">
    <SectionHeading subtitle="実際にご利用いただいたお客様の声">
      お客様の体験談
    </SectionHeading>

    <div class="grid gap-8 md:grid-cols-3">
      {
        testimonials.map((t) => (
          <div class="rounded-2xl bg-white p-6 shadow-md">
            <div class="mb-3 flex items-center justify-between">
              <StarRating rating={t.rating} />
              <span class="rounded-full bg-cyan-50 px-3 py-1 text-xs font-semibold text-cyan-700">
                {t.tag}
              </span>
            </div>
            <p class="mb-4 text-gray-600">{t.text}</p>
            <div class="text-sm text-gray-400">
              <span class="font-semibold text-gray-700">{t.name}</span>
              <span class="ml-2">{t.date}</span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

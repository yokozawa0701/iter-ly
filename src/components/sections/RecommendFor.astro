---
import SectionHeading from '../parts/SectionHeading.astro';

const items = [
  {
    src: '/images/recommend-private.jpg',
    alt: '貸切ツアー',
    title: '自分たちだけで楽しみたい方',
    text: '7人乗りの車を貸切するので、他のグループと合流することはありません。プライベートな空間で、気の合う仲間や家族と自分たちだけのツアーを楽しめます。',
  },
  {
    src: '/images/recommend-student.jpg',
    alt: 'セブ留学中の学生',
    title: 'セブに留学中の学生',
    text: '週末や休日を使って気軽に参加できます。クラスメイトと6名で申し込めば1人あたり10,980円。ホテル送迎付きなので、寮やシェアハウスからの移動も安心です。',
  },
  {
    src: '/images/recommend-easy.jpg',
    alt: '手配おまかせ',
    title: '旅行の手配が面倒な方',
    text: '予約から送迎まですべておまかせ。現地での面倒な手配は一切不要です。日本語ガイドが同行するので、言葉の不安もありません。',
  },
];
---

<section class="bg-gray-50 py-20">
  <div class="mx-auto max-w-6xl px-4">
    <SectionHeading subtitle="イテリーのツアーはこんな方にぴったりです">
      こんな人におすすめ
    </SectionHeading>

    <div class="space-y-16">
      {
        items.map((item, i) => (
          <div
            class:list={[
              'flex flex-col items-center gap-8 md:flex-row md:gap-12',
              i % 2 !== 0 && 'md:flex-row-reverse',
            ]}
          >
            <div class="w-full md:w-1/2">
              <div class="aspect-[16/9] overflow-hidden rounded-xl bg-gray-200">
                <img
                  src={item.src}
                  alt={item.alt}
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
              </div>
            </div>
            <div class="w-full md:w-1/2">
              <h3 class="mb-3 text-xl font-bold text-sky-600">{item.title}</h3>
              <p class="text-gray-600">{item.text}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

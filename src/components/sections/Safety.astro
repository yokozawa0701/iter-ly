---
import { Icon } from 'astro-icon/components';
import SectionHeading from '../parts/SectionHeading.astro';

const reasons = [
  {
    icon: 'lucide:shield-check',
    title: '許可証を持つツアー業者',
    text: 'フィリピン政府公認のツアー許可証を保有する業者のみと提携しています。',
  },
  {
    icon: 'lucide:search-check',
    title: '弊社による業者スクリーニング',
    text: '安全性・サービス品質を弊社が厳しく審査し、基準を満たした業者のみを採用しています。',
  },
  {
    icon: 'lucide:message-circle',
    title: '日本語ガイド',
    text: '日本語を話す現地ガイドが同行。言葉の不安なくツアーを楽しめます。',
  },
  {
    icon: 'lucide:users',
    title: '貸切ツアー',
    text: '7人乗りの車を丸ごと貸切。周りを気にせず、仲間や家族だけの特別な時間を過ごせます。',
  },
  {
    icon: 'lucide:building-2',
    title: '日本の会社が運営',
    text: '日本の会社が企画・運営しているため、日本品質のサービスを提供します。',
  },
  {
    icon: 'lucide:credit-card',
    title: 'クレジットカード決済で安心',
    text: 'オンラインでの安全なカード決済。現地での現金トラブルの心配がありません。',
  },
];
---

<section id="safety" class="bg-white py-20">
  <div class="mx-auto max-w-6xl px-4">
    <SectionHeading subtitle="安全で快適なツアーをお届けするための取り組み">
      安心して参加できる理由
    </SectionHeading>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        reasons.map((r) => (
          <div class="rounded-2xl border border-gray-100 bg-gray-50 p-6">
            <Icon name={r.icon} class="mb-3 h-8 w-8 text-cyan-600" />
            <h3 class="mb-2 text-lg font-bold text-gray-900">{r.title}</h3>
            <p class="text-sm text-gray-600">{r.text}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

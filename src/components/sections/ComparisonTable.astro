---
import SectionHeading from '../parts/SectionHeading.astro';

const rows = [
  {
    label: '表示上の金額 / 人',
    iterLy: '¥10,980',
    companyA: '¥13,200',
    companyB: '¥8,100',
    bold: true,
  },
  {
    label: '各スポットエントランス費用',
    iterLy: '◎ 込み',
    companyA: '◎ 込み',
    companyB: '× 別途',
  },
  {
    label: 'シュノーケリング器具',
    iterLy: '◎ 込み',
    companyA: '◎ 込み',
    companyB: '× 別途',
  },
  {
    label: 'ホテル送迎',
    iterLy: '◎ 込み',
    companyA: '× 別途',
    companyB: '◎ 込み',
  },
  {
    label: 'システム管理費',
    iterLy: '◎ 込み',
    companyA: '× 別途',
    companyB: '◎ 込み',
  },
  {
    label: 'ドローン空撮',
    iterLy: '◎ 込み',
    companyA: '× なし',
    companyB: '× なし',
  },
  {
    label: '日本語ガイド',
    iterLy: '◎ 込み',
    companyA: '◎ 込み',
    companyB: '◎ 込み',
  },
  {
    label: '実際の金額 / 人',
    iterLy: '¥10,980',
    companyA: '¥15,455',
    companyB: '¥16,500',
    bold: true,
  },
];
---

<section class="bg-white py-20">
  <div class="mx-auto max-w-4xl px-4">
    <SectionHeading
      subtitle="「詳細を聞いたら金額が違った」――イテリーならそんな心配はありません"
    >
      他社ツアーとの料金比較
    </SectionHeading>

    <div class="overflow-x-auto">
      <table class="w-full border-collapse text-sm md:text-base">
        <thead>
          <tr>
            <th class="p-3 text-left"></th>
            <th
              class="rounded-t-lg bg-cyan-600 p-3 text-center font-bold text-white"
            >
              イテリー
            </th>
            <th class="bg-gray-200 p-3 text-center font-bold text-gray-700"
              >A社</th
            >
            <th class="bg-gray-200 p-3 text-center font-bold text-gray-700"
              >B社</th
            >
          </tr>
        </thead>
        <tbody>
          {
            rows.map((row, i) => (
              <tr class={i % 2 === 1 ? 'bg-gray-50' : ''}>
                <td
                  class:list={[
                    'border-b border-gray-200 p-3 text-gray-700',
                    row.bold ? 'font-bold' : 'font-medium',
                  ]}
                >
                  {row.label}
                </td>
                <td class="border-2 border-cyan-200 bg-cyan-50 p-3 text-center font-bold text-cyan-800">
                  {row.iterLy}
                </td>
                <td class="border-b border-gray-200 p-3 text-center text-gray-600">
                  {row.companyA}
                </td>
                <td class="border-b border-gray-200 p-3 text-center text-gray-600">
                  {row.companyB}
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
      <p class="mt-4 text-right text-sm text-gray-500">※ 6名の場合の金額です</p>
    </div>
  </div>
</section>
